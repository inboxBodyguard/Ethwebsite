<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Free SMB Cyber Incident Playbook | ezmcyber.xyz</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f9fafc;
      color: #333;
    }
    header {
      background: #0a2540;
      color: white;
      text-align: center;
      padding: 2rem 1rem;
    }
    header h1 {
      margin: 0;
      font-size: 2rem;
    }
    header p {
      margin: 0.5rem 0 0;
      font-size: 1.1rem;
    }
    .container {
      max-width: 800px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    .social-proof {
      margin-top: 2rem;
      text-align: center;
      font-size: 0.9rem;
      color: #666;
    }
    footer {
      text-align: center;
      padding: 2rem 1rem;
      font-size: 0.85rem;
      color: #666;
    }
    /* Playbook styles */
    #playbook {
      margin-top: 2rem;
    }
    .incident {
      border: 1px solid #ccc;
      border-radius: 6px;
      margin: 1rem 0;
      padding: 0.5rem 1rem;
      background: #fff;
    }
    .incident h3 {
      margin: 0;
      cursor: pointer;
      color: #0a2540;
    }
    .incident ul {
      list-style: none;
      margin: 0.5rem 0 0;
      padding-left: 0;
      display: none;
    }
    .incident.open ul {
      display: block;
    }
    .incident li {
      margin: 0.4rem 0;
    }
    .tool-btn {
      margin-left: 8px;
      font-size: 0.85rem;
      background: #0a2540;
      color: #fff;
      padding: 2px 6px;
      border-radius: 4px;
      text-decoration: none;
    }
    #downloadPDF {
      margin-top: 1rem;
      padding: 0.6rem 1.2rem;
      background: #0a2540;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    #downloadPDF:hover {
      background: #163d66;
    }
  </style>
</head>
<body>

<header>
  <h1>Free SMB Cyber Incident Playbook</h1>
  <p>Interactive steps to detect, respond, and recover from cyber threats</p>
</header>

<div class="container">
  <p><strong>Running a business with 10â€“50 employees?</strong> One phishing email or ransomware attack can throw everything off track. This playbook gives you actionable steps your team can actually follow â€” plus built-in tools to help.</p>

  <!-- Interactive Playbook -->
  <div id="playbook"></div>
  <button id="downloadPDF">ðŸ“„ Download My Playbook</button>

  <div class="social-proof">
    <p>Trusted by small businesses building their first line of defense against phishing and cyber threats.</p>
  </div>
</div>

<footer>
  &copy; 2025 ezmcyber.xyz â€” All rights reserved.
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
const playbookData = {
  "Phishing Email": [
    { text: "Disconnect affected device from the network." },
    { text: "Collect and preserve the suspicious email headers.", tool: "https://ezmcyber.xyz/header-analyzer" },
    { text: "Verify links/domains.", tool: "https://ezmcyber.xyz/checker.html" },
    { text: "Notify IT or security response team immediately." },
    { text: "Force password reset for affected accounts." },
    { text: "Report incident to regulators if sensitive data is involved." }
  ],
  "Ransomware Infection": [
    { text: "Isolate infected systems from the network." },
    { text: "Do not pay ransom â€” contact law enforcement." },
    { text: "Restore from clean backups." },
    { text: "Scan all machines with updated AV tools." },
    { text: "Communicate incident to staff and customers." }
  ],
  "Lost Laptop/Phone": [
    { text: "Report loss immediately to IT/security team." },
    { text: "Trigger remote wipe if available (MDM tools)." },
    { text: "Reset credentials linked to the device." },
    { text: "File police report if sensitive data was stored." },
    { text: "Notify compliance officer if required." }
  ],
  "Insider Threat": [
    { text: "Identify suspicious user activity and disable access." },
    { text: "Preserve system and access logs for investigation." },
    { text: "Escalate to HR/legal team as required." },
    { text: "Communicate with affected departments." },
    { text: "Update policies to prevent recurrence." }
  ],
  "DDoS Attack": [
    { text: "Alert hosting provider or ISP for mitigation." },
    { text: "Enable web application firewall (WAF) protections." },
    { text: "Rate-limit traffic and block offending IPs." },
    { text: "Keep stakeholders updated on downtime." },
    { text: "Plan for scaling defenses if attack persists." }
  ]
};

// Render playbook
const container = document.getElementById("playbook");
for (const [incident, steps] of Object.entries(playbookData)) {
  const section = document.createElement("div");
  section.className = "incident";

  const header = document.createElement("h3");
  header.textContent = incident;
  header.onclick = () => section.classList.toggle("open");

  const list = document.createElement("ul");
  steps.forEach(step => {
    const li = document.createElement("li");

    // Checkbox
    const checkbox = document.createElement("input");
    checkbox.type = "checkbox";
    li.appendChild(checkbox);

    // Step text
    const span = document.createElement("span");
    span.textContent = " " + step.text;
    li.appendChild(span);

    // Tool button if exists
    if (step.tool) {
      const toolBtn = document.createElement("a");
      toolBtn.href = step.tool;
      toolBtn.target = "_blank";
      toolBtn.textContent = " ðŸ”— Open Tool";
      toolBtn.className = "tool-btn";
      li.appendChild(toolBtn);
    }

    list.appendChild(li);
  });

  section.appendChild(header);
  section.appendChild(list);
  container.appendChild(section);
}

// PDF Export
document.getElementById("downloadPDF").onclick = () => {
  const { jsPDF } = window.jspdf;
  const doc = new jsPDF();
  let y = 10;

  doc.setFont("helvetica", "bold");
  doc.setFontSize(16);
  doc.text("My Incident Playbook", 10, y);
  y += 10;

  for (const [incident, steps] of Object.entries(playbookData)) {
    doc.setFont("helvetica", "bold");
    doc.setFontSize(14);
    doc.text(incident, 10, y);
    y += 8;

    steps.forEach(step => {
      doc.setFont("helvetica", "normal");
      doc.setFontSize(12);
      doc.text("- " + step.text, 14, y);
      y += 6;
    });

    y += 4;
  }

  doc.save("incident-playbook.pdf");
};
</script>

</body>
</html>