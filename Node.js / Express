const express = require('express');
const fetch = require('node-fetch');
const bodyParser = require('body-parser');
const app = express();
const PORT = process.env.PORT || 3000;

app.use(bodyParser.urlencoded({ extended: true }));
app.use(express.static('public')); // serve signup.html from /public folder

// Serve signup page
app.get('/signup', (req, res) => {
  res.sendFile(__dirname + '/public/signup.html');
});

// CAPTCHA verification
app.post('/verify', async (req, res) => {
  const token = req.body['g-recaptcha-response'];
  const secret = '6Lf8YtMrAAAAAEGcOwrFgyfntoLuhYiJOGTpRNdn';

  const response = await fetch(`https://www.google.com/recaptcha/api/siteverify`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    body: `secret=${secret}&response=${token}`
  });

  const data = await response.json();

  if (data.success) {
    // CAPTCHA passed, continue signup or redirect
    res.redirect('/signup-complete'); // create this page or route
  } else {
    res.send('Human verification failed. Please try again.');
  }
});

// Optional: Signup complete page
app.get('/signup-complete', (req, res) => {
  res.send('<h1>Signup Complete!</h1><p>Welcome to EZM Cyber!</p>');
});

app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});